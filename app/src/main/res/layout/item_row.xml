<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    app:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#E6E6E6"

    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"

        android:padding="3dp">

        <RelativeLayout
            android:id="@+id/relative_front"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#ffffff"

            android:clickable="false">

            <!--<TextView
                android:id="@+id/txtv_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="16sp" />
    -->

            <TextView
                android:id="@+id/mgeofenceTagname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:maxLength="30"
                android:singleLine="true"
                android:text="Tag Name"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textPrimarySize"
                 />

            <TextView
                android:id="@+id/mgeofencetaglocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mgeofenceTagname"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:clickable="false"
                android:singleLine="true"
                android:text="Tag Loction"
                android:textColor="@color/textColorSecondry"
                android:textSize="@dimen/textSecondrySize" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/relative_back"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/relative_front"
            android:background="#ffffff"

            android:clickable="false"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/medit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_joinnow"
                android:clickable="false"

                android:gravity="center"
                android:orientation="horizontal"

                >


                <!--<Button-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:drawableRight="@drawable/edit"-->
                <!--android:background="@color/colorAccent"-->
                <!--/>-->

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableLeft="@drawable/edit_white_36x36"
                    android:gravity="left|center_vertical"
                    android:padding="3dp"

                    android:text="@string/Edit"
                    android:textAllCaps="false"

                    android:textColor="@color/white"

                    android:textSize="@dimen/textPrimarySize"
                    android:textStyle="italic" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/mdelete"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_joinnow"


                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableLeft="@drawable/delete_white_36x36"
                    android:gravity="left|center_vertical"
                    android:padding="3dp"
                    android:text="@string/delete"
                    android:textAllCaps="false"

                    android:textColor="@color/white"

                    android:textSize="@dimen/textPrimarySize"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>