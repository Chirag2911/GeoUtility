<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"


    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/mheadergeofence"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainheadersize"
                android:background="@color/ColorPrimary"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tag_geofence_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/SETTING"
                    android:textColor="@color/white"
                    android:textSize="@dimen/Mainheading_text"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tag_geofence_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/save"
                    android:textColor="@color/white"

                    android:textSize="@dimen/Mainheading_text"
                    android:textStyle="italic" />

            </RelativeLayout>


            <TextView
                android:id="@+id/mlocname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/settingSubheading"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="@string/location_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"

                android:textSize="@dimen/Subheadingheading_text"

                android:textStyle="italic" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewForProfileIn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/setting_notification"
                    android:textColor="@color/textColorSecondry"
                    android:textSize="@dimen/heading_text"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switchNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"

                    android:textOff="OFF"
                    android:textOn="On" />

                <LinearLayout
                    android:id="@+id/mlineaNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/chekNofiEnter"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Enter"

                        android:textColor="@color/grey" />

                    <CheckBox

                        android:id="@+id/chekNotiexit"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:text="Exit"

                        android:textColor="@color/grey" />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/greyline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textAlram"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/setting_alarm"
                    android:textColor="@color/textColorSecondry"
                    android:textSize="@dimen/heading_text"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switchAlwaram"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"

                    android:textOff="OFF"
                    android:textOn="On" />

                <LinearLayout
                    android:id="@+id/mlineaAlaram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp"
                    android:visibility="gone">

                    <CheckBox

                        android:id="@+id/chekAlaramEntry"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Enter"
                        android:textColor="@color/grey" />

                    <CheckBox

                        android:id="@+id/chekAlaramExit"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:text="Exit"

                        android:textColor="@color/grey" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/greyline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewForProfil"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/Profile_eneter"
                    android:textColor="@color/textColorSecondry"
                    android:textSize="@dimen/heading_text"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textProfileIn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="10dp"

                    android:gravity="center_vertical"
                    android:text="None" />

                <ImageButton
                    android:id="@+id/imgBtnChangeProfileIn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="5dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:src="@android:drawable/ic_menu_edit"
                    android:text="None" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewForProfilOut"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/Profile_exit"

                    android:textColor="@color/textColorSecondry"
                    android:textSize="@dimen/heading_text"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textProfileOut"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="10dp"

                    android:gravity="center_vertical"
                    android:text="None" />

                <ImageButton
                    android:id="@+id/imgBtnChangeProfileOut"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|end"
                    android:layout_marginRight="5dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:src="@android:drawable/ic_menu_edit"
                    android:text="None" />


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relative12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/settingSubheading"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/textViewss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/Near_by"
                    android:textColor="@color/white"
                    android:textSize="@dimen/Subheadingheading_text"
                    android:textStyle="italic" />

            </RelativeLayout>


            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:horizontalSpacing="3dp"
                android:numColumns="2"

                android:verticalSpacing="4dp">

            </GridView>


        </LinearLayout>
    </ScrollView>

    <com.killerrech.model.ADview
        android:id="@+id/startAppBanner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center_horizontal"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/add_white_36x36"
        app:layout_anchor="@+id/relative12"
        app:layout_anchorGravity="end|bottom" />

</android.support.design.widget.CoordinatorLayout>